	   );
   	   ini_set("text_next", "Next");

	   #####
	   # clean up first:
	   run_program("/sbin/busybox", "rm",
	   	   "/tmp/aroma/root.prop",
		   "/tmp/aroma/wipe.prop",
		   "/tmp/aroma/systemcore.prop",
		   "/tmp/aroma/btfix.prop",
		   "/tmp/aroma/fixpermissions.prop",
		   "/tmp/aroma/apps.prop",
		   "/tmp/aroma/addapps.prop",
		   "/tmp/aroma/mods.prop",
