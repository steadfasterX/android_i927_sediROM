		   "/tmp/aroma/features.prop",
		   "/tmp/aroma/bootanimation.prop",
		   "/tmp/aroma/tweaks.prop",
		   "/tmp/aroma/audio.prop");
	   
	   # preselect the modify type
       writetmpfile(
		  "type.prop",
			"selected=2\n"
	   );
endif;
